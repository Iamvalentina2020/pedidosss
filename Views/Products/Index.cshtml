@model IEnumerable<GestionPedidos.Models.Domain.Product>
@{
    ViewData["Title"] = "Productos";
}

<div class="fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 style="color: var(--text-primary); font-weight: 700;">
            <i class="bi bi-box"></i> Gestión de Productos
        </h1>
        @if (ViewBag.CurrentUserRole == "Admin" || ViewBag.CurrentUserRole == "Employee")
        {
            <a asp-action="Create" class="neu-button-primary">
                <i class="bi bi-plus-circle"></i> Nuevo Producto
            </a>
        }
    </div>

    <div class="neu-card mb-4">
        <h5 style="color: var(--text-primary); margin-bottom: 1.5rem;">
            <i class="bi bi-funnel"></i> Filtros de Búsqueda
        </h5>
        
        <form method="get" class="row">
            <div class="col-md-3">
                <label class="form-label">Buscar por nombre:</label>
                <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Nombre del producto..." />
            </div>
            <div class="col-md-3">
                <label class="form-label">Categoría:</label>
                <select name="category" class="form-control">
                    <option value="">Todas las categorías</option>
                    @if (ViewBag.Categories != null)
                    {
                        foreach (var category in (IEnumerable<string>)ViewBag.Categories)
                        {
                            <option value="@category" selected="@(ViewBag.Category == category)">@category</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Precio mín:</label>
                <input type="number" name="minPrice" value="@ViewBag.MinPrice" class="form-control" placeholder="0" step="0.01" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Precio máx:</label>
                <input type="number" name="maxPrice" value="@ViewBag.MaxPrice" class="form-control" placeholder="1000" step="0.01" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="neu-button w-100">
                    <i class="bi bi-search"></i> Buscar
                </button>
            </div>
        </form>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="neu-card h-100">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 style="color: var(--text-primary); margin: 0;">@product.Name</h5>
                            @if (product.Stock <= 5)
                            {
                                <span class="status-badge" style="background: var(--accent-color); color: white; font-size: 0.75rem;">
                                    <i class="bi bi-exclamation-triangle"></i> Bajo Stock
                                </span>
                            }
                        </div>
                        
                        <p style="color: var(--text-secondary); margin-bottom: 1rem; min-height: 3rem;">
                            @(string.IsNullOrEmpty(product.Description) ? "Sin descripción" : product.Description)
                        </p>
                        
                        <div class="neu-card-inset mb-3">
                            <div class="row text-center">
                                <div class="col-6">
                                    <div style="color: var(--accent-color); font-weight: 700; font-size: 1.25rem;">
                                        @product.Price.ToString("C")
                                    </div>
                                    <small style="color: var(--text-secondary);">Precio</small>
                                </div>
                                <div class="col-6">
                                    <div style="color: var(--text-primary); font-weight: 600; font-size: 1.25rem;">
                                        @product.Stock
                                    </div>
                                    <small style="color: var(--text-secondary);">Stock</small>
                                </div>
                            </div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(product.Category))
                        {
                            <div class="mb-3">
                                <span class="status-badge status-processing">
                                    <i class="bi bi-tag"></i> @product.Category
                                </span>
                            </div>
                        }
                        
                        <div class="btn-group w-100">
                            <a asp-action="Details" asp-route-id="@product.Id" class="neu-button flex-fill">
                                <i class="bi bi-eye"></i> Ver
                            </a>
                            @if (ViewBag.CurrentUserRole == "Admin" || ViewBag.CurrentUserRole == "Employee")
                            {
                                <a asp-action="Edit" asp-route-id="@product.Id" class="neu-button flex-fill">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                            }
                            @if (ViewBag.CurrentUserRole == "Admin")
                            {
                                <a asp-action="Delete" asp-route-id="@product.Id" class="neu-button flex-fill" 
                                   onclick="return confirm('¿Está seguro de eliminar este producto?')">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="neu-card text-center">
            <i class="bi bi-box" style="font-size: 4rem; color: var(--text-light); margin-bottom: 1rem;"></i>
            <h4 style="color: var(--text-secondary);">No se encontraron productos</h4>
            <p style="color: var(--text-light);">
                @if (!string.IsNullOrEmpty(ViewBag.Search?.ToString()) || !string.IsNullOrEmpty(ViewBag.Category?.ToString()))
                {
                    <span>Intente modificar los filtros de búsqueda.</span>
                }
                else
                {
                    <span>Aún no hay productos registrados en el sistema.</span>
                }
            </p>
            @if (ViewBag.CurrentUserRole == "Admin" || ViewBag.CurrentUserRole == "Employee")
            {
                <a asp-action="Create" class="neu-button-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Agregar Primer Producto
                </a>
            }
        </div>
    }
</div>