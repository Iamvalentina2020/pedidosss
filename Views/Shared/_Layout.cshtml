<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Gestión de Pedidos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/neumorphic.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    @{
        var userJson = Context.Session.GetString("CurrentUser");
        var isAuthenticated = !string.IsNullOrEmpty(userJson);
        var userName = "";
        var userRole = "";
        
        if (isAuthenticated)
        {
            try
            {
                var userData = System.Text.Json.JsonSerializer.Deserialize<System.Text.Json.JsonElement>(userJson);
                userName = userData.GetProperty("Name").GetString() ?? "";
                var roleValue = userData.GetProperty("Role").GetInt32();
                userRole = ((GestionPedidos.Models.Domain.UserRole)roleValue).ToString();
            }
            catch { }
        }
    }

    @if (isAuthenticated)
    {
        <nav class="navbar">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-box-seam"></i> Gestión de Pedidos
                </a>
                
                <div class="d-flex align-items-center">
                    <div class="navbar-nav d-flex flex-row me-3">
                        <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                        <a class="nav-link" asp-controller="Products" asp-action="Index">
                            <i class="bi bi-box"></i> Productos
                        </a>
                        <a class="nav-link" asp-controller="Orders" asp-action="Index">
                            <i class="bi bi-cart"></i> Pedidos
                        </a>
                        @if (userRole == "Admin")
                        {
                            <a class="nav-link" asp-controller="Users" asp-action="Index">
                                <i class="bi bi-people"></i> Usuarios
                            </a>
                        }
                    </div>
                    
                    <div class="d-flex align-items-center">
                        <span class="me-3 text-secondary">
                            <i class="bi bi-person-circle"></i> @userName (@userRole)
                        </span>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="neu-button btn-sm">
                                <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    }

    <div class="container-fluid">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success fade-in">
                <i class="bi bi-check-circle"></i> @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error fade-in">
                <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (isAuthenticated)
    {
        <footer class="text-center mt-5 p-3" style="background: var(--primary-bg); color: var(--text-secondary);">
            <div class="container">
                &copy; 2025 - Sistema de Gestión de Pedidos - Desarrollado con principios SOLID
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
